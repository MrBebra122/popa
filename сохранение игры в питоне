    name = input("Name")


    def create_json():
        json_data = [{
            "name": name,
        }]
        with open('db.json', 'w') as file:
            file.write(json.dumps(json_data, indent=2, ensure_ascii=False))

            def add_to_json():
                json_data = [{
                    "name": name,
                }]
                data = json.load(open("db.json"))
                data.append(json_data)
                with open("db.json", "w") as file:
                    json.dump(data, file, indent=2, ensure_ascii=False)
